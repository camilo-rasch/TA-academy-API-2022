<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="test suite " verbose="1">
    <listeners>
        <listener class-name="com.automation.api.listeners.Listeners"/>
    </listeners>
    <parameter name="uri" value="https://627347ec6b04786a0903cc93.mockapi.io"/>
    <test name="example run">
        <groups>
            <run>
                <include name="withDeleteTransactions"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.api.tests.EndpointEmptyTest"/>
            <class name="com.automation.api.tests.PostTest"/>
        </classes>
    </test>
    <test name="example run 2">
        <groups>
            <run>
                <include name="WithoutDeleteTransactions"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.api.tests.DuplicateEmailsTest"/>
            <class name="com.automation.api.tests.PutTest"/>
        </classes>
    </test>
</suite>
